<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="modelo.Cliente" table="cliente">
        <id name="clDni" type="string">
            <column name="cl_dni" length="20" />
            <generator class="assigned" />
        </id>
        <property name="clNombre" type="string">
            <column name="cl_nombre" length="50" />
        </property>
        <property name="clApellido" type="string">
            <column name="cl_apellido" length="50" />
        </property>
        <property name="clTelefono" type="integer">
            <column name="cl_telefono" />
        </property>
        <set name="cuentas" table="cuenta" cascade="all">
            <key>
                <column name="cliente_cl_dni" />
            </key>
            <one-to-many class="modelo.Cuenta" />
        </set>
    </class>
</hibernate-mapping>